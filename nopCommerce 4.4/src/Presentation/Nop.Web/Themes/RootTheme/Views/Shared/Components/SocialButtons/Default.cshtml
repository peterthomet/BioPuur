@model SocialModel
<ul class="networks" itemscope itemtype="http://schema.org/Organization">
    <link itemprop="url" href="@Url.RouteUrl("HomePage")">
    @if (!string.IsNullOrEmpty(Model.FacebookLink))
    {
        <li class="facebook" itemprop="sameAs"><a href="@Model.FacebookLink" target="_blank" rel="noopener noreferrer">@T("Footer.FollowUs.Facebook")</a></li>
    }
    @if (!string.IsNullOrEmpty(Model.TwitterLink))
    {
        <li class="twitter" itemprop="sameAs"><a href="@Model.TwitterLink" target="_blank" rel="noopener noreferrer">@T("Footer.FollowUs.Twitter")</a></li>
    }
    @if (Model.NewsEnabled)
    {
        <li class="rss" itemprop="sameAs"><a href="@Url.RouteUrl("NewsRSS", new {languageId = Model.WorkingLanguageId})">@T("Footer.FollowUs.RSS")</a></li>
    }
    @if (!string.IsNullOrEmpty(Model.YoutubeLink))
    {
        <li class="youtube" itemprop="sameAs"><a href="@Model.YoutubeLink" target="_blank" rel="noopener noreferrer">@T("Footer.FollowUs.Youtube")</a></li>
    }
</ul>